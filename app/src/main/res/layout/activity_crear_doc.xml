<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utec.edu.uy.appsas.CrearDocActivity">

    <Button
        android:id="@+id/btn_f_egre"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/btn_f_egreso"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="121dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btn_f_ing"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@id/btn_f_ing"
        app:layout_constraintHorizontal_bias="1.0"
        android:onClick="fecha_egreso"/>

    <EditText
        android:id="@+id/edit_fecha_egre"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_marginBottom="126dp"
        android:ems="10"
        android:hint="@string/fechaEgr"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/EditTextStyle"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/edit_fecha_ing"
        android:layout_marginRight="1dp" />

    <Button
        android:id="@+id/btn_f_ing"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/btn_f_ingreso"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@id/btn_f_egre"
        app:layout_constraintRight_toRightOf="@+id/btn_f_nac"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_f_nac"
        app:layout_constraintHorizontal_bias="0.0"
        android:onClick="fecha_ingreso"/>

    <EditText
        android:id="@+id/edit_fecha_ing"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="@string/fechaIng"
        android:inputType="textPersonName"
        style="@style/EditTextStyle"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_f_ing"
        app:layout_constraintRight_toRightOf="@+id/edit_fecha_nac"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_f_nac"
        android:layout_marginBottom="6dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_crear_docente"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="77dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Titulo"
        />

    <EditText
        android:id="@+id/edit_telefono"
        style="@style/EditTextStyle"
        android:layout_width="176dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/telefono"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_correo"
        tools:layout_constraintBaseline_creator="1" />

    <EditText
        android:id="@+id/edit_apellido"
        style="@style/EditTextStyle"
        android:layout_width="166dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/apellido"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_nombre"
        tools:layout_constraintBaseline_creator="1" />

    <EditText
        android:id="@+id/edit_documento"
        style="@style/EditTextStyle"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/documento"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit_nombre" />

    <EditText
        android:id="@+id/edit_nombre"
        style="@style/EditTextStyle"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@id/edit_correo"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_correo"
        style="@style/EditTextStyle"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/correo"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@id/edit_fecha_egre"
        android:layout_marginTop="142dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginBottom="141dp" />

    <Button
        android:id="@+id/btn_f_nac"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/btn_f_nacimiento"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@id/btn_f_ing"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:onClick="fecha_nacimiento"/>

    <EditText
        android:id="@+id/edit_fecha_nac"
        style="@style/EditTextStyle"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="@string/fechaNac"
        android:inputType="textPersonName"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@id/edit_fecha_ing"
        android:layout_marginStart="11dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toRightOf="@id/btn_f_nac"
        android:layout_marginLeft="11dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_create_doc"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_fecha_egre"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="29dp"
        android:onClick="create_docente"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@+id/button4" />

</android.support.constraint.ConstraintLayout>
